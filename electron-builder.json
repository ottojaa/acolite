{
  "asar": false,
  "appId": "acolite",
  "directories": {
    "output": "release/"
  },
  "files": ["**/*", "!**/*.ts", "!*.map", "!package.json", "!package-lock.json"],
  "extraResources": [
    {
      "from": "dist",
      "to": "app",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons/acolite-logo-ellipse.png",
    "target": ["nsis"]
  },
  "portable": {
    "splashImage": "dist/assets/icons/acolite.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons/acolite-logo-ellipse.png",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons/acolite-logo-ellipse.png",
    "target": ["AppImage"]
  },
  "publish": {
    "GH_TOKEN": ""
  }
}
